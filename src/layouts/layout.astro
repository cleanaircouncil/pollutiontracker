---
import "../styles/styles.css";

const { title } = Astro.props;
---

<html data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>{title} - Clean Air Council</title>
    <meta
      name="description"
      content="Pollution Tracker is an interactive map showing industrial pollution and related permits along the Delaware River. A project by Clean Air Council."
    />
    <meta name="theme-color" content="rgb(20, 29, 41)" />

    <meta property="og:title" content="Pollution Tracker | Clean Air Council" />
    <meta
      property="og:description"
      content="Explore pollution from industrial facilities along the Delaware River with this interactive map by Clean Air Council."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pollutiontracker.cleanair.org/" />
    <meta property="og:image" content="https://pollutiontracker.cleanair.org/images/preview.jpg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pollution Tracker | Clean Air Council" />
    <meta name="twitter:description" content="An interactive map of industrial pollution along the Delaware River." />
    <meta name="twitter:image" content="https://pollutiontracker.cleanair.org/images/preview.jpg" />
    <meta name="twitter:site" content="@CleanAirCouncil" />

    <link rel="shortcut icon" href="https://cleanair.org/wp-content/themes/cac/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="/assets/css/fonts/fontawesome/css/fontawesome.min.css" />
    <link rel="stylesheet" href="/assets/css/fonts/fontawesome/css/solid.min.css" />

    <script src="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.js"></script>
    <link href="https://unpkg.com/maplibre-gl@latest/dist/maplibre-gl.css" rel="stylesheet" />
  </head>

  <body>
    <slot />
  </body>
</html>
