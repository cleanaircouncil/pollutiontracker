<section id="viewer" class="viewer | lightbox" data-viewer hidden>
  <header class="flex space-between">
    <div>
      <strong data-populate="filename"></strong>
    </div>

    <div class="flex gap">
      <a data-populate="url: @href, filename: @download">
        <i class="fa fa-download"></i> Download PDF
      </a>

      <button data-close>
        <i class="fa fa-close"></i>
      </button>
    </div>
  </header>

  <div class="viewer__loading">
    <i class="fa fa-circle-notch fa-spin" style="--fa-animation-duration: .75s"
    ></i>
  </div>
  <iframe data-populate="url: @src"></iframe>
</section>

<style>
  .lightbox {
    margin: 0px;
    inset: 0px;
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 100;
    background: rgba(0, 0, 0, 0.8);
  }

  .viewer[hidden] {
    display: none;
  }

  .viewer {
    color: var(--color-white);
    padding: 1rem;
    display: grid;
    grid-template-rows: min-content 1fr;
    gap: 1rem;
    grid-template-areas:
      "header"
      "viewer";
  }

  .viewer a,
  .viewer button {
    color: inherit;
    background: none;
    border: none;
    text-decoration: none;
    line-height: 1.5rem;
    cursor: pointer;
  }

  .viewer iframe {
    grid-area: viewer;
    border: none;
    width: 100%;
    height: 100%;
    border-radius: 1rem;
    position: relative;
  }

  .viewer__loading {
    grid-area: viewer;
    background: rgba(0, 0, 0, 0.3);
    place-content: center;
    text-align: center;
    border-radius: 1rem;
    font-size: 3rem;
    position: relative;
  }
</style>

<script>
  import { populateWithData } from "../helpers/populate";
  import { attachment } from "../helpers/store";

  const viewerEl = document.querySelector("[data-viewer]");
  const buttonEl = document.querySelector("[data-viewer] [data-close]");

  attachment.subscribe((value) => {
    if (value != null) {
      populateWithData(viewerEl, value);
    }

    viewerEl.toggleAttribute("hidden", value == null);
  });

  buttonEl.addEventListener("click", () => attachment.set(null));

  document.addEventListener("click", (e) => {
    const viewerLinkEl = e.target.closest("[data-viewer-link]");
    if (!viewerLinkEl) return;

    e.preventDefault();
    attachment.set(viewerLinkEl.dataset);
  });
</script>
