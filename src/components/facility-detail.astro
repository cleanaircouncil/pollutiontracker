---
import Eyebrow from "./eyebrow.astro";
import Permit from "./permit.astro";

const { facility = {} } = Astro.props;
---

<div class="facility-detail__holder" data-facility-detail>
  {
    facility.image && (
      <img
        class="facility-detail__hero"
        src={facility.image[0].url}
        alt={facility.company_name}
      />
    )
  }

  <article class="facility-detail stack-loose">
    <header class="stack-tight">
      <Eyebrow facility={facility} />

      <div>
        <h2>{facility.company_name}</h2>
        <p class="text-detail">
          <strong>{facility.description}</strong>
        </p>
        <p class="text-detail">
          <i class="fa fa-location-dot color-gray-dark"></i>
          <span>{facility.address}</span>
        </p>
      </div>
    </header>

    <section class="facility-card__permits stack">
      <h3>Current Permits and Compliance</h3>

      {
        facility.echo_compliance && (
          <div class="grid columns-three gap-tight">
            {facility.echo_compliance.map((permit) => (
              <Permit permit={permit} style="card" />
            ))}
          </div>
        )
      }

      {
        (facility.totalPenalties || facility.dep_violations) && (
          <ul class="fa-ul" style="--fa-li-margin: 1.75em">
            {facility.totalPenalties && (
              <li>
                <span class="fa-li">
                  <i class="fa fa-landmark-flag" />
                </span>
                <strong>{facility.totalPenalties}</strong> in federal penalties
                in the last 5 years
              </li>
            )}
            {facility.dep_violations && (
              <li>
                <span class="fa-li">
                  <i class="fa fa-ban" />
                </span>
                <strong>{facility.dep_violations?.violation_count}</strong>{" "}
                violations since
                <strong>{facility.dep_violations?.since}</strong>
              </li>
            )}
          </ul>
        )
      }

      <div class="text text-detail">
        Sources:
        <a target="_blank" href={facility.epa_link}>
          ECHO <i class="fa-solid fa-arrow-up-right-from-square"></i>
        </a> and
        <a target="_blank" href={facility.dep_link}>
          DEP <i class="fa-solid fa-arrow-up-right-from-square"></i>
        </a>
      </div>
    </section>

    {
      facility.clean_air_notes && (
        <section class="facility-card__notes stack-tight">
          <h3>Clean Air Action Alerts</h3>
          <div class="text" set:html={facility.clean_air_notes} />
        </section>
      )
    }

    {
      facility.notes && (
        <section class="facility-card__notes stack-tight">
          <h3>Facility Notes</h3>
          <div class="text" set:html={facility.notes} />
        </section>
      )
    }

    <a
      href="google.pdf"
      data-viewer-link
      data-url={"google.pdf"}
      data-filename={"Fake PDF Name"}
    >
      TEST
    </a>

    {
      facility.attachments && (
        <section class="text">
          {facility.attachments.map((group) => (
            <div class="text">
              <header>
                <h3>{group.heading}</h3>
              </header>

              <div class="grid columns-three gap-tight">
                {group.attachments.map((attachment, i) => (
                  <a
                    class="facility-card__attachment"
                    href={attachment.url}
                    data-viewer-link
                    data-url={attachment.url}
                    data-filename={attachment.filename}
                  >
                    <img src={attachment.thumbnails.large.url} />
                  </a>
                ))}
              </div>
            </div>
          ))}
        </section>
      )
    }
  </article>
</div>

<style is:global>
  .facility-detail__holder {
    background: var(--color-white);
  }

  .facility-detail {
    overflow: scroll;
    max-height: 100%;
    pointer-events: all;
    padding: 0.5rem;
  }

  .facility-detail__hero {
    object-fit: cover;
  }

  .facility-detail__facts {
    padding: 1.5rem;
  }

  .facility-detail__fact {
    list-style: none;
  }

  .facility-card__attachment {
    cursor: pointer;
  }

  .facility-card__attachment {
    border-radius: 0.5rem;
    border: 2px solid var(--color-gray-dark);
    transition:
      translate 0.2s ease-in-out,
      border-color 0.2s ease-in-out !important;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .facility-card__attachment:hover {
    border-color: var(--color-accent);
    translate: 0% -0.25rem;
  }

  @media screen and (min-width: 900px) {
    .facility-detail__hero {
      margin-block: -2rem 1rem;
    }
  }
</style>
